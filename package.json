{
  "name": "barbershop-api",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "prisma": {
    "seed": "tsx src/repositories/prisma/seed.ts"
  },
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "start": "node dist/server.js",
    "build": "tsup src --out-dir dist",
    "lint": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "prisma:generate": "docker exec -it api-barbershop npx prisma generate",
    "prisma:seed": "docker exec -it api-barbershop npx prisma db seed",
    "prisma:migrate": "docker exec api-barbershop npx prisma migrate dev",
    "prisma:reset": "docker exec -it api-barbershop npx prisma migrate reset",
    "prisma-studio": "docker exec api-barbershop npx prisma studio"
  },
  "engines": {
    "node": ">=20.19.0"
  },
  "author": "codecodedev",
  "license": "ISC",
  "devDependencies": {
    "@faker-js/faker": "8.4.1",
    "@rocketseat/eslint-config": "2.1.0",
    "@types/bcryptjs": "2.4.6",
    "@types/node": "20.11.16",
    "@vitest/coverage-v8": "1.3.1",
    "@vitest/ui": "1.3.1",
    "eslint": "8.56.0",
    "prisma": "5.14.0",
    "tsup": "8.0.1",
    "tsx": "4.20.1",
    "typescript": "5.3.3",
    "vite-tsconfig-paths": "4.3.1",
    "vitest": "1.3.1"
  },
  "dependencies": {
    "@fastify/jwt": "9.1.0",
    "@fastify/static": "7.0.4",
    "@prisma/client": "5.14.0",
    "@sendgrid/mail": "8.1.3",
    "bcryptjs": "2.4.3",
    "date-fns": "3.6.0",
    "dotenv": "16.4.1",
    "fastify": "4.26.0",
    "fastify-multer": "2.0.3",
    "zod": "3.22.4"
  }
}
